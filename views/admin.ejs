<%- include("templates/header") %>

<div class="container">
  <h1 class="text-center mb-5">Users</h1>
  <ul class="list-group">
    <% let i=0; %>
    <% for(i=0; i < users.length; i++) { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="btn-toolbar" role="toolbar">
          <span class="me-3">User: <%= users[i].name %></span>
          <span class="me-3">Email: <%= users[i].email %></span>
          <span class="me-3">User Type: <%= users[i].userType %></span> <!-- Display user type -->
          <div class="btn-group me-2" role="group">
            <form action="/promote/<%= users[i]._id %>" method="post">
              <button type="submit" class="btn btn-sm btn-danger">Promote to Admin</button>
            </form>
          </div>
          <div class="btn-group" role="group">
            <form action="/demote/<%= users[i]._id %>" method="post">
              <button type="submit" class="btn btn-sm btn-success">Demote to User</button>
            </form>
          </div>
        </div>
      </li>
    <% } %>
  </ul>
</div>

<%- include("templates/footer") %>
